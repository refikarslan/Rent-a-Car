@model List<Musteri>

@{

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Yeni Müsteri</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        
    </style>
</head>
<body>
    
   @* <div style="overflow-x:scroll;">*@
        <table class="table table-striped table-bordered table-sm">

            <tr>
                <th>Musteri Ad Soyad</th>
                <th>Müşteri E Mail</th>
                <th>Müşteri Tel No</th>
                <th>Müşteri Kimlik</th>
                <th>Müşteri Doğum Tarihi</th>
                <th>Müşteri Hesap No</th>
                <th>Müşteri Fotoğraf</th>
                <th>SİL</th>
                <th>GÜNCELLE</th>
                
            </tr>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Musteri_AdSoyad</td>
                        <td>@item.Musteri_EMail</td>
                        <td>@item.Musteri_TelNo</td>
                        <td>@item.Musteri_Kimlik</td>
                        <td>@item.Musteri_DogmTarihi</td>
                        <td>@item.Musteri_HesapNo</td>
                        <td><img class="img" src="@Url.Content("~/img/" + @item.FileName)" /></td>
                        <td><a href="/Home/Sil/@item.Musteri_Id" class="btn btn-outline-danger btn-sm">SİL</a></td>
                        <td><a href="/Home/MusteriGetir/@item.Musteri_Id" class="btn btn-outline-success btn-sm">GÜNCELLE</a></td>

                    </tr>
                }
            </tbody>
        </table>
        <a href="/Home/YeniMusteri" class="btn btn-secondary">Müşteri Ekle</a>
   @* </div>*@

</body>
</html>