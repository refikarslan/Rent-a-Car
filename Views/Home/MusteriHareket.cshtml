@using ArabaKiralamaWebApp.ViewModels.RequestModels;

@model List<MusteriHareket>

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Yeni Müsteri</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />



</head>
<body>



    <table id="musterihareket" class="table table-striped table-bordered table-sm" style="margin-left=500px">

    <tr>
   
        <th>Musteri İsim Soyisim</th>
        <th>Araba Model</th>
        <th>Kira Başlangıç Tarihi</th>
        <th>Kira Bitiş Tarihi</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
      
             @foreach (var item in Model)
    {

         <tr>
               <td> @item.Musteri.Musteri_AdSoyad</td>
               <td>@item.Araba.Araba_Marka</td>
               <td>@item.KiraBaslangic</td>
               <td>@item.KiraBitis</td>
                    <td><a href="/Home/MusteriHSil/@item.Id" class="btn btn-outline-danger btn-sm">SİL</a></td>
               <td><a href="/Home/MusteriHGetir/@item.Id" class="btn btn-outline-success btn-sm">GÜNCELLE</a></td>
         </tr>

    }
        
        
    </tbody>
</table>
    <a href="/Home/MusteriHEkle" class="btn btn-secondary">Müşteri Hareket Listesine Ekleme Yap</a>

</body>
</html>
